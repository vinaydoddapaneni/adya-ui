{
  "name": "adyaui",
  "version": "0.0.1",
  "private": true,
  "description": "A framework-agnostic UI component library for modern web applications",
  "keywords": [
    "ui",
    "components",
    "web-components",
    "react",
    "vue",
    "angular",
    "svelte",
    "design-system"
  ],
  "author": "AdyaUI Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/adyaui.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "pnpm --filter \"./packages/*\" dev",
    "build": "pnpm --filter \"./packages/*\" build",
    "build:core": "pnpm --filter @adyaui/core build",
    "build:react": "pnpm --filter @adyaui/react build",
    "build:vue": "pnpm --filter @adyaui/vue build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx,.vue",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx,.vue --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,vue,css,scss,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,vue,css,scss,md,json}\"",
    "typecheck": "pnpm --filter \"./packages/*\" typecheck",
    "docs:dev": "pnpm --filter docs dev",
    "docs:build": "pnpm --filter docs build",
    "docs:preview": "pnpm --filter docs preview",
    "clean": "pnpm --filter \"./packages/*\" clean && rm -rf node_modules",
    "clean:dist": "pnpm --filter \"./packages/*\" clean",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/ui": "^1.0.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.10.1",
    "eslint-plugin-import": "^2.29.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss,md,json}": [
      "prettier --write"
    ]
  }
}
